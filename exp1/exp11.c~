#include <stdio.h>
#include <fcntl.h>
#include <stdlib.h>
#include <unistd.h>

int main(int argc, char *argv[])
{
	int srcfd, tarfd, num;
	char *buf;
	if (argc != 4)
	{
		printf("incorrect argv!\n");
		return -1;
	}
	
	if ( (srcfd = open(argv[2], O_RDONLY, 0)) == -1)
	{
		printf("can not open source file!\n");
		return -1;
	}
	
	if ( (tarfd = open(argv[3], O_WRONLY|O_CREAT|O_TRUNC, 0666)) == -1)
	{
		printf("can not open target file!\n");
		return -1;
	}
	
	while (num = read(srcfd, buf, 1) > 0)
		write(tarfd, buf, num);

	close(srcfd);
	close(tarfd);
	return 0;
}

